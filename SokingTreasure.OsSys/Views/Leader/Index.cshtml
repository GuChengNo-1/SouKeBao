    <script>
        var data = [
            { img: 1, h2: '测试一', h3: '测试一' },
            { img: 4, h2: '测试二', h3: '测试二' },
            { img: 3, h2: '测试三', h3: '测试三' },
            { img: 4, h2: '测试四', h3: '测试四' },
            { img: 1, h2: '测试五', h3: '测试五' },
        ]
        var g = function (id) {
            if (id.substr(0, 1) == '.') {
                return document.getElementsByClassName(id.substr(1));
            }
            return document.getElementById(id);
        }
        function addEntiretys() {
            var tpl_main = g('template_main').innerHTML.replace(/^\s*/, '').replace(/\s*$/, '');
            var tpl_ctrl = g('template_ctrl').innerHTML.replace(/^\s*/, '').replace(/\s*$/, '');
            var out_main = [];
            var out_ctrl = [];
            console.log(tpl_main)
            for (i in data) {
                var _html_main = tpl_main.replace(/{{index}}/g, data[i].img).replace(/{{h2}}/g, data[i].h2).replace(/{{h3}}/g, data[i].h3);
                var _html_ctrl = tpl_ctrl.replace(/{{index}}/g, data[i].img);

                out_main.push(_html_main);
                out_ctrl.push(_html_ctrl);
            }
            g('template_main').innerHTML = out_main.join('');
            g('template_ctrl').innerHTML = out_ctrl.join('');
        }
        function switchEntirety(n) {
            var main = g('main_' + n);
            var ctrl = g('ctrl_' + n);
            var clear_main = g('.main-i');
            var clear_ctrl = g('.ctrl-i');
            for (i = 0; i < clear_main.length; i++) {
                clear_main[i].className = clear_main[i].className.replace('main-i-different', '');
                clear_ctrl[i].className = clear_ctrl[i].className.replace('ctrl-i-different', '');
            }
            main.className += ' main-i-different';
            ctrl.className += ' ctrl-i-different';
        }
        function movePic() {
            var pics = g('.pic');
            for (i = 0; i < pics.length; i++) {
                pics[i].style.marginTop = (-1 * pics[i].clientHeight / 2) + 'px'
            }

        }
        window.onload = function () {
            addEntiretys();
            switchEntirety(2);
            setTimeout(function () {
                movePic();
            }, 100)
        }
