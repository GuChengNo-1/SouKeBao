@{
    Layout = null;
    ViewBag.Title = "搜客宝-工商信息查询-公司企业注册信息查询-全国企业信用信息公示系统";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="Restyling jQuery UI Widgets and Elements" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <!--样式表-->
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Css/ace-fonts.css" rel="stylesheet" />
    <link href="~/Css/ace.min.css" id="main-ace-style" rel="stylesheet" />
    <!--JS文件-->
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Js/ace-extra.min.js"></script>
</head>
<body class="login-layout blur-login">
    <div class="main-container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1 class="white">
                            搜客宝-
                            <span style="font-size:25px;">用户登录</span>
                        </h1>
                    </div>
                    <div class="space-6"></div>
                    <!--用户界面-->
                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        用户登录
                                    </h4>
                                    <div class="space-6"></div>
                                    <form>
                                        <fieldset>
                                            <label class="clearfix form-loginEmail" style="display:none;">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="text" id="LoginEmail" class="form-control" placeholder="请输入邮箱" />
                                                </span>
                                            </label>
                                            <label class="block clearfix form-loginName">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="text" id="LoginName" class="form-control" placeholder="请输入用户名" />
                                                </span>
                                            </label>
                                            <label class="block clearfix form-loginPwd">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="password" id="LoginPwd" class="form-control" placeholder="请输入密码" />
                                                </span>
                                            </label>
                                            <label class="clearfix form-confirmPwd" style="display:none;">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="password" id="ConfirmPwd" class="form-control" placeholder="请输入确认密码" />
                                                </span>
                                            </label>
                                            <label class="clearfix form-code" style="display:block;">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="text" id="LoginCode" class="form-control" placeholder="请输入验证码" style="width:70%;float:left;" />
                                                    <img src="/User/GetCodeImg?id=0.111565465" class="CodeImg" style="height: 34px;width: 30%;" />
                                                </span>
                                            </label>
                                            <div class="space"></div>
                                            <div class="clearfix">
                                                <label class="login-lasting width-35 pull-left" style="display:block;">
                                                    <input type="checkbox" class="ace" />
                                                    <span class="lbl">记住我</span>
                                                </label>
                                                <button type="reset" id="form-btn-reset" class="width-35 pull-left btn btn-sm" style="display:none;">
                                                    <span class="bigger-110">重置</span>
                                                </button>
                                                <button type="button" id="form-btn-login" data-op="0" class="width-35 pull-right btn btn-sm btn-primary">
                                                    <span class="bigger-110">登录</span>
                                                </button>
                                            </div>
                                            <div class="space-4"></div>
                                        </fieldset>
                                    </form>
                                </div>
                                <div class="toolbar clearfix">
                                    <div class="btn-forgetPwd">
                                        <a href="#" class="forgot-password-link">
                                            <i class="layui-icon">&#xe603;</i> 
                                            忘记密码
                                        </a>
                                    </div>
                                    <div id="btn-common" data-op="0">
                                        <a href="#" class="user-signup-link">
                                            用户注册
                                            <i class="layui-icon">&#xe602;</i> 
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            var common_a = "";
            //验证图片刷新
            $(".CodeImg").click(function () {
                $(".CodeImg").attr("src", "/User/GetCodeImg?id=" + Math.random());
            })
            //改变表单里的h5的特性和样式
            $(document).on("click", "#btn-common", function () {
                if ($("#btn-common").attr("data-op") == "0") {
                    console.log(0);
                    $(".form-loginEmail").css({
                        "display":"block"
                    });
                    $(".form-confirmPwd").css({
                        "display":"block"
                    });
                    $(".login-lasting").css({
                        "display":"none"
                    });
                    $("#form-btn-reset").css({
                        "display": "block"
                    });
                    $(".widget-main>h4").text("新用户注册");
                    $("#form-btn-login").text("注册");
                    $("#btn-common>a").text("");
                    $("#btn-common>a").append("返回登录<i class='layui-icon'>&#xe602;</i>");
                    $("#btn-common").attr("data-op", "1");
                    $("#form-btn-login").attr("data-op", "1");
                }
                else {
                    console.log(1);
                    $(".form-loginEmail").css({
                        "display": "none"
                    });
                    $(".form-confirmPwd").css({
                        "display": "none"
                    });
                    $(".login-lasting").css({
                        "display": "block"
                    });
                    $("#form-btn-reset").css({
                        "display": "none"
                    });
                    $(".widget-main>h4").text("用户登录");
                    $("#form-btn-login").text("登录");
                    $("#btn-common>a").text("");
                    $("#btn-common>a").append("用户注册<i class='layui-icon'>&#xe602;</i>");
                    $("#btn-common").attr("data-op", "0");
                    $("#form-btn-login").attr("data-op", "0");
                }
            })
            $(document).on("click", "#form-btn-login",function () {
                var formlogin = { LoginName: $("#LoginName").val(), LoginPwd: $("#LoginPwd").val(), LoginCode: $("#LoginCode").val()},
                    formsignin = { LoginEmail: $("#LoginEmail").val(), LoginName: $("#LoginName").val(), LoginPwd: $("#LoginPwd").val(), ConfirmPwd: $("#ConfirmPwd").val(), LoginCode: $("#LoginCode").val()};
                //用户登录验证
                if ($("#form-btn-login").attr("data-op") == "0") {
                    $.ajax({
                        url: "/User/Login/",
                        type: "post",
                        data: formlogin,
                        success: function (data) {
                            if (data.Success) {
                                alert("账号或密码错误");
                            }
                            else {
                                alert("验证码错误");
                                $(".CodeImg").attr("src", "/User/GetCodeImg?id=" + Math.random());
                            }
                        }
                    })
                } else if ($("#form-btn-login").attr("data-op") == "1") {//新用户注册
                    $.ajax({
                        url: "/User/InsertUser",
                        type: "post",
                        data: formsignin,
                        success: function (data) {
                            if (data.Success == 1) {
                                alert("添加失败");
                            }
                            else {
                            }
                        }
                    })
                }
            })
        })
    </script>
    <!--[if !IE]-->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/Js/jquery.min.js'>" + "<" + "/script>");
    </script>
    <!--[!endif]-->
    <!--[if !IE]-->
    <script type="text/javascript">
        if ('ontouchst' in document.documentElement) document.write("<script src='~/Js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <!--[!endif]-->
    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        jQuery(function ($) {
            $(document).on('click', '.toolbar a[data-target]', function (e) {
                e.preventDefault();
                var target = $(this).data('target');
                $('.widget-box.visible').removeClass('visible');
                $(target).addClass('visible');
            });
        });
    </script>
</body>
</html>
